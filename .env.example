# IOTA Configuration
# Copy this file to .env and adjust values as needed

# HuggingFace Token (REQUIRED for Llama access)
# Get your token from: https://huggingface.co/settings/tokens
# You must also accept Llama license at: https://huggingface.co/meta-llama/Llama-3.2-1B
HF_TOKEN=

# Device Configuration
# Options: cuda, xla (TPU), mps (Apple Silicon), cpu
# Leave empty for auto-detection
DEVICE=

# Wallet Configuration
MINER_WALLET=test
MINER_HOTKEY=m1

# Health Check Settings
MINER_HEALTH_HOST=0.0.0.0
MINER_HEALTH_PORT=9000
LAUNCH_HEALTH=False

# Training Settings
MINER_TIMEOUT=300
LOCAL_BATCH_SIZE=8
MODEL_DIR=./weights

# Validator Settings (if running validator)
VALIDATOR_HEALTH_HOST=0.0.0.0
VALIDATOR_HEALTH_PORT=9000
